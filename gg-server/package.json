{
  "name": "gg-server",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local",
    "dev:remote": "wrangler dev --remote",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:create": "wrangler d1 migrations create gg-database",
    "db:migrate:diff": "prisma migrate diff --from-empty --to-schema-datamodel ./prisma/schema.prisma --script",
    "db:migrate:local": "wrangler d1 migrations apply gg-database --local",
    "db:migrate:remote": "wrangler d1 migrations apply gg-database --remote",
    "db:generate": "prisma generate",
    "auth:generate": "better-auth generate"
  },
  "dependencies": {
    "@better-auth/stripe": "^1.3.30",
    "@prisma/adapter-d1": "^6.18.0",
    "@prisma/client": "^6.18.0",
    "better-auth": "^1.3.30",
    "gg-shared": "workspace:*",
    "hono": "^4.10.3",
    "kysely": "^0.28.8",
    "kysely-d1": "^0.4.0",
    "stripe": "^19.1.0"
  },
  "devDependencies": {
    "prisma": "^6.18.0",
    "wrangler": "^4.45.0"
  }
}
