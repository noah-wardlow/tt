{
  "name": "tt-server",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local",
    "dev:remote": "wrangler dev --remote",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:create": "wrangler d1 migrations create tt-database",
    "db:migrate:diff": "prisma migrate diff --from-empty --to-schema-datamodel ./prisma/schema.prisma --script",
    "db:migrate:local": "wrangler d1 migrations apply tt-database --local",
    "db:migrate:remote": "wrangler d1 migrations apply tt-database --remote",
    "db:generate": "prisma generate",
    "auth:generate": "better-auth generate"
  },
  "dependencies": {
    "@better-auth/stripe": "^1.4.3",
    "@prisma/adapter-d1": "^6.19.0",
    "@prisma/client": "^6.19.0",
    "better-auth": "^1.4.3",
    "hono": "^4.10.7",
    "kysely": "^0.28.8",
    "kysely-d1": "^0.4.0",
    "stripe": "^19.3.1",
    "tt-shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "prisma": "^6.19.0",
    "wrangler": "^4.51.0"
  }
}
